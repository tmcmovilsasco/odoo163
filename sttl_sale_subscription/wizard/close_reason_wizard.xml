<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- close_reason_wizard form view -->
    <record id="close_reason_wizard_view_form" model="ir.ui.view">
        <field name="name">close_reason_wizard.view.form</field>
        <field name="model">close.reason.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="reason_id"/>
                    </group>
                    <footer>
                        <button name="action_close_subs" class="oe_right oe_highlight" type="object" string="Close Subscription"/>
                        <button  class="oe_right" string="Cancel" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>