<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- sale_order_view_inh_sttl inherit form view -->
    <record id="sale_order_view_inh_sttl" model="ir.ui.view">
        <field name="name">sale_order_view_inh_sttl.inherit.view.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="payment_term_id" position="before">
                <field name="recurrance_id"/> 
                <field name="recurr_until" attrs="{'invisible': ['|',('recurrance_id','=',False),('subscription_status','=','c')]}"/>
                <field name="next_invoice_date" readonly="1" attrs="{'invisible': [('state','!=','sale')]}"/>
                <field name="recurring_started" invisible="1"/>
                <field name="subscription_status" ></field>
            </field>            
            <xpath expr="//header" position="inside">
                <button name="action_create_recurring_invoices" type="object" string="Create Recurring Invoices" attrs="{'invisible': ['|','|',('state','!=','sale'),('recurrance_id','=',False),('subscription_status','=','c'),]}"/>            
                <button name="end_subscription" type="object" string="End Subscription" attrs="{'invisible': ['|','|',('state','!=','sale'),('recurrance_id','=',False),('subscription_status','=','c')]}"/>            
                <button name="renew_subscription" type="object" string="Renew Subscription" attrs="{'invisible': ['|','|',('state','!=','sale'),('recurrance_id','=',False),('subscription_status','!=','c')]}"/>            
            </xpath>
        </field>
    </record>

</odoo>