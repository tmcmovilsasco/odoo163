<odoo>
    <record id="purchase_order_product_image_form_view" model="ir.ui.view">
        <field name="name">purchase.order.product.image.form.view</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='other_info']" position="inside">
                <field name="print_product_image"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="before">
                <field name="product_image" widget="image" attrs="{'column_invisible': [('parent.print_product_image', '=', False)]}"/>
            </xpath>
        </field>
    </record>
</odoo>